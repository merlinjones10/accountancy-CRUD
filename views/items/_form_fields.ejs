<section class="border border-dark p-5">
<form class="bg-primary" >
<div class="form-group ">
  <label for="title" class='lead'><strong>Title</strong></label>
  <input
    required
    value="<%= item.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="form-group bg-light border rounded p-3">
  <div class="form-check">
    <input required class="form-check-input" type="radio" name="type" id="typeRadios1" value="income" <% if (item.type === 'income') { %>
     checked
    <% } %> >
    <label class="form-check-label text-success" for="typeRadios1">
      Income
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input text-danger" type="radio" name="type" id="typeRadios2" value="expense"  <% if (item.type === 'expense') { %>
     checked
    <% } %>>
    <label class="form-check-label text-danger" for="typeRadios2">
      Expense
    </label>
  </div>
</div>

  <div class="form-group">
    <label for="title" class='lead'><strong>Amount</strong></label>
    <input
      required
      value="<%= item.number %>"
      type="number"
      name="number"
      id="number"
      step="0.01"
      min="0"
      class="form-control"
    />
  </div>
  <div class="form-group">
    <label for="description" class='lead'><strong>Description</strong></label>
    <textarea required name="description" id="description" class="form-control">
<%= item.description %></textarea
    >
  </div>
  <a href="/" class="btn btn-secondary">Cancel</a>
  <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>
</section>
